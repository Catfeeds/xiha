<!--page/xh_component/index.wxml-->

<view class="index">
    <!--<view class="head">
        <view class="title">小程序组件</view>
        <view class="desc">这里就当前已支持的组件进行演示</view>
    </view>-->

    <view class="body">
        <view class="section swiper xh-signup-bannerlist">
            <swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}"
                autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
                <block wx:for="{{imgUrls}}" wx:for-index="idx" wx:for-item="itemName">
                    <swiper-item>
                        <image src="{{itemName.resource_url}}" class="slide-image"></image>
                    </swiper-item>
                </block>
            </swiper>
        </view>

        <view class="coach__list">
            <view class="list-block media-list" style="margin: 0px; margin-bottom: 10px;">
                <view class="coach__ul">
                    <view class="coach__ul__li">
                        <navigator url="test" class="item-link item-content">
                            <view class="item-media">
                                <image src="/image/ucenter-no-photo.png" style='width: 4rem; height:4rem; border-radius: 50%;'></image>
                            </view>
                            <view class="item-inner">
                                <view class="item-title-row">
                                    <view class="item-title">
                                        张三
                                        <text style="font-size:28rpx; color:#555;">合肥八一驾校</text>
                                    </view>
                                </view>
                                <view class="item-subtitle">
                                    <image src="/image/star.png"></image>
                                    <image src="/image/star.png"></image>
                                    <image src="/image/star.png"></image>
                                    <image src="/image/star.png"></image>
                                    <image src="/image/star.png"></image>
                                </view>
                                <view class="item-title">
                                    <text style="color:#777777;">计时培训</text>
                                    <text style="color:#FEAE4D; font-weight: bold;">130元/时</text>起
                                </view>
                            </view>
                            <image class="widget__arrow" src="/image/arrowright.png" mode="aspectFill" ></image>

                        </navigator>
                    </view>
                    <view style="height: 40px; line-height: 40px; padding-left:5.5rem; position: relative;">
                        <image src="/image/coupon-logo.png" style="height:32rpx; width:32rpx;"></image> 学车优惠券200元
                    </view>
                </view>
            </view>

            <view class="list-block media-list" style="margin: 0px; margin-bottom: 10px;">
                <view class="coach__ul">
                    <view class="coach__ul__li">
                        <navigator url="test" class="item-link item-content">
                            <view class="item-media">
                                <image src="/image/ucenter-no-photo.png" style='width: 4rem; height:4rem; border-radius: 50%;'></image>
                            </view>
                            <view class="item-inner" style="border-bottom:none;">
                                <view class="item-title-row">
                                    <view class="item-title">
                                        张三
                                        <text style="font-size:28rpx; color:#555;">合肥八一驾校</text>
                                    </view>
                                </view>
                                <view class="item-subtitle">
                                    <image src="/image/star.png"></image>
                                    <image src="/image/star.png"></image>
                                    <image src="/image/star.png"></image>
                                    <image src="/image/star.png"></image>
                                    <image src="/image/star.png"></image>
                                </view>
                                <view class="item-title">
                                    <text style="color:#777777;">计时培训</text>
                                    <text style="color:#FEAE4D; font-weight: bold;">130元/时</text>起
                                </view>
                            </view>
                            <image class="widget__arrow" src="/image/arrowright.png" mode="aspectFill" ></image>

                        </navigator>
                    </view>
                </view>
            </view>

        </view>

    </view>
</view>
